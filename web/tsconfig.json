{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@assets": ["assets/"],
      "@components/*": ["components/*"],
      "@components": ["components/"],
      "@features/*": ["features/*"],
      "@features": ["features/"],
      "@hooks/*": ["hooks/*"],
      "@hooks": ["hooks/"],
      "@store/*": ["store/*"],
      "@store": ["store/"],
      "@utils/*": ["utils/*"],
      "@utils": ["utils/"]
    }
  },
  "include": ["./src", "./dist/types/**/*.ts", "./next-env.d.ts", "svgr.d.ts"],
  "exclude": ["./node_modules"]
}
